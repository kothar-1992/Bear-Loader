<?xml version="1.0" encoding="utf-8"?>
<resources>
    <!-- Modern 3D Button Style -->
    <style name="ModernButton" parent="Widget.MaterialComponents.Button">
        <item name="android:background">@drawable/button_3d_modern</item>
        <item name="android:foreground">@drawable/ripple_effect</item>
        <item name="android:textColor">@color/button_text</item>
        <item name="android:textSize">16sp</item>
        <item name="android:textStyle">bold</item>
        <item name="android:fontFamily">sans-serif-medium</item>
        <item name="android:elevation">12dp</item>
        <item name="android:paddingLeft">24dp</item>
        <item name="android:paddingRight">24dp</item>
        <item name="android:paddingTop">14dp</item>
        <item name="android:paddingBottom">14dp</item>
        <item name="android:minHeight">56dp</item>
        <item name="cornerRadius">28dp</item>
    </style>

    <!-- Modern Card Style -->
    <style name="ModernCard" parent="Widget.MaterialComponents.CardView">
        <item name="cardBackgroundColor">@color/card_background</item>
        <item name="cardCornerRadius">16dp</item>
        <item name="cardElevation">12dp</item>
        <item name="cardMaxElevation">16dp</item>
        <item name="cardUseCompatPadding">true</item>
        <item name="cardPreventCornerOverlap">true</item>
    </style>

    <!-- Modern Input Field Style -->
    <style name="ModernTextInputLayout" parent="Widget.MaterialComponents.TextInputLayout.OutlinedBox">
        <item name="boxBackgroundColor">@color/input_background</item>
        <item name="boxStrokeColor">@color/md3_primary</item>
        <item name="boxStrokeWidth">2dp</item>
        <item name="boxCornerRadiusTopStart">12dp</item>
        <item name="boxCornerRadiusTopEnd">12dp</item>
        <item name="boxCornerRadiusBottomStart">12dp</item>
        <item name="boxCornerRadiusBottomEnd">12dp</item>
        <item name="hintTextColor">@color/text_hint</item>
        <item name="android:textColorHint">@color/text_hint</item>
        <item name="helperTextTextColor">@color/text_secondary</item>
        <item name="errorTextColor">@color/error_red</item>
    </style>

    <!-- Modern Text Styles -->
    <style name="ModernTitle" parent="TextAppearance.MaterialComponents.Headline5">
        <item name="android:textColor">@color/text_primary</item>
        <item name="android:textSize">30sp</item>
        <item name="android:textStyle">bold</item>
        <item name="android:fontFamily">sans-serif-medium</item>
    </style>

    <style name="ModernTitleUpper" parent="ModernTitle">
        <item name="android:textAllCaps">true</item>
        <item name="android:letterSpacing">0.08</item>
    </style>

    <style name="ModernSubtitle" parent="TextAppearance.MaterialComponents.Body1">
        <item name="android:textColor">@color/text_secondary</item>
        <item name="android:textSize">16sp</item>
        <item name="android:fontFamily">sans-serif</item>
    </style>

    <style name="ModernBody" parent="TextAppearance.MaterialComponents.Body2">
        <item name="android:textColor">@color/text_primary</item>
        <item name="android:textSize">14sp</item>
        <item name="android:fontFamily">sans-serif</item>
    </style>

    <!-- Modern Checkbox Style -->
    <style name="ModernCheckBox" parent="Widget.MaterialComponents.CompoundButton.CheckBox">
        <item name="buttonTint">@color/md3_primary</item>
        <item name="android:textColor">@color/text_secondary</item>
        <item name="android:textSize">14sp</item>
        <item name="android:fontFamily">sans-serif</item>
    </style>

    <!-- Modern Switch Style (replacement for checkboxes) -->
    <style name="ModernSwitch" parent="Widget.MaterialComponents.CompoundButton.Switch">
        <item name="trackTint">@color/checkbox_unchecked</item>
        <item name="thumbTint">@color/md3_primary</item>
        <item name="android:textColor">@color/text_secondary</item>
        <item name="android:textSize">14sp</item>
        <item name="android:fontFamily">sans-serif</item>
    </style>

    <!-- Modern Progress Bar Style -->
    <style name="ModernProgressBar" parent="Widget.MaterialComponents.CircularProgressIndicator">
        <item name="indicatorColor">@color/md3_primary</item>
        <item name="trackColor">@color/md3_surface_variant</item>
        <item name="indicatorSize">48dp</item>
        <item name="trackThickness">4dp</item>
    </style>

    <!-- PUBG Mobile Enhanced Styles -->
    <style name="PubgVariantCard" parent="Widget.Material3.CardView.Elevated">
        <item name="cardBackgroundColor">@color/md3_surface_container</item>
        <item name="cardCornerRadius">16dp</item>
        <item name="cardElevation">8dp</item>
        <item name="strokeColor">@color/accent_color</item>
        <item name="strokeWidth">1dp</item>
        <item name="rippleColor">@color/accent_color</item>
    </style>

    <style name="PubgVariantTitle" parent="TextAppearance.Material3.HeadlineSmall">
        <item name="android:textColor">@color/text_primary</item>
        <item name="android:textSize">18sp</item>
        <item name="android:textStyle">bold</item>
        <item name="android:fontFamily">sans-serif-medium</item>
    </style>

    <style name="PubgVariantDescription" parent="TextAppearance.Material3.BodyMedium">
        <item name="android:textColor">@color/text_secondary</item>
        <item name="android:textSize">13sp</item>
        <item name="android:fontFamily">sans-serif</item>
        <item name="android:lineSpacingExtra">2dp</item>
    </style>

    <style name="PubgActionButton" parent="Widget.Material3.Button.UnelevatedButton">
        <item name="backgroundTint">@color/accent_color</item>
        <item name="cornerRadius">24dp</item>
        <item name="android:textColor">@color/text_on_accent</item>
        <item name="android:textSize">14sp</item>
        <item name="android:fontFamily">sans-serif-medium</item>
        <item name="iconTint">@color/text_on_accent</item>
        <item name="iconSize">18dp</item>
        <item name="android:minHeight">48dp</item>
    </style>

    <style name="PubgUpdateButton" parent="Widget.Material3.Button.UnelevatedButton">
        <item name="backgroundTint">@color/md3_secondary</item>
        <item name="cornerRadius">24dp</item>
        <item name="android:textColor">@color/md3_on_secondary</item>
        <item name="android:textSize">14sp</item>
        <item name="android:fontFamily">sans-serif-medium</item>
        <item name="iconTint">@color/md3_on_secondary</item>
        <item name="iconSize">18dp</item>
        <item name="android:minHeight">48dp</item>
    </style>

    <style name="PubgProgressIndicator" parent="Widget.Material3.CircularProgressIndicator">
        <item name="indicatorColor">@color/accent_color</item>
        <item name="trackColor">@color/dark_surface_variant</item>
        <item name="indicatorSize">32dp</item>
        <item name="trackThickness">3dp</item>
    </style>
</resources>
