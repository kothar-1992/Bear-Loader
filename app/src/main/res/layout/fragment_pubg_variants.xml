<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical"
    android:background="@color/md3_background"
    android:padding="16dp">

    <!-- Header Section (ZEUS God Aim Style) -->
    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="horizontal"
        android:gravity="center_vertical"
        android:layout_marginBottom="24dp"
        android:padding="16dp"
        android:background="@drawable/header_background">

        <!-- Bear Logo -->
        <ImageView
            android:layout_width="64dp"
            android:layout_height="64dp"
            android:src="@drawable/bear_logo"
            android:layout_marginEnd="16dp"
            android:contentDescription="Bear Logo" />

        <!-- App Title -->
        <LinearLayout
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:layout_weight="1"
            android:orientation="vertical">

            <!-- BEAR-MOD text removed -->

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="PUBG Mobile Variants"
                android:textColor="@color/md3_on_surface_variant"
                android:textSize="14sp"
                android:layout_marginTop="4dp" />

        </LinearLayout>

        <!-- Status Indicator -->
        <LinearLayout
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:orientation="vertical"
            android:gravity="end">

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="Status: Active"
                android:textColor="@color/success_green"
                android:textSize="12sp"
                android:textStyle="bold" />

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="Version 3.8.0"
                android:textColor="@color/md3_on_surface_variant"
                android:textSize="10sp"
                android:layout_marginTop="2dp" />

        </LinearLayout>

    </LinearLayout>

    <!-- Variants List Title -->
    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="Available PUBG Mobile Variants"
        android:textColor="@color/md3_on_surface"
        android:textSize="18sp"
        android:textStyle="bold"
        android:layout_marginBottom="16dp"
        android:layout_marginStart="8dp" />

    <!-- PUBG Variants RecyclerView -->
    <androidx.recyclerview.widget.RecyclerView
        android:id="@+id/rv_pubg_variants"
        android:layout_width="match_parent"
        android:layout_height="0dp"
        android:layout_weight="1"
        android:clipToPadding="false"
        android:paddingBottom="80dp"
        android:scrollbars="vertical"
        android:fadeScrollbars="true" />



</LinearLayout>
