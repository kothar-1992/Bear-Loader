<?xml version="1.0" encoding="utf-8"?>
<layer-list xmlns:android="http://schemas.android.com/apk/res/android">
    <!-- Shadow layer for 3D effect -->
    <item android:top="6dp" android:left="6dp">
        <shape android:shape="rectangle">
            <gradient
                android:angle="135"
                android:startColor="@color/shadow_dark"
                android:endColor="@color/shadow_light"
                android:type="linear" />
            <corners android:radius="16dp" />
        </shape>
    </item>
    
    <!-- Main card layer -->
    <item android:bottom="6dp" android:right="6dp">
        <shape android:shape="rectangle">
            <solid android:color="@color/card_background" />
            <corners android:radius="16dp" />
            <stroke
                android:width="1dp"
                android:color="@color/card_stroke" />
        </shape>
    </item>
    
    <!-- Highlight layer for 3D effect -->
    <item android:bottom="6dp" android:right="6dp" android:top="1dp" android:left="1dp">
        <shape android:shape="rectangle">
            <gradient
                android:angle="315"
                android:startColor="@color/highlight"
                android:centerColor="#00FFFFFF"
                android:endColor="#00FFFFFF"
                android:type="linear" />
            <corners android:radius="15dp" />
        </shape>
    </item>
</layer-list>
