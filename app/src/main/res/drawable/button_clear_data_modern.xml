<?xml version="1.0" encoding="utf-8"?>
<selector xmlns:android="http://schemas.android.com/apk/res/android">
    
    <!-- Pressed state -->
    <item android:state_pressed="true">
        <layer-list>
            <!-- Shadow layer -->
            <item android:top="2dp" android:left="2dp">
                <shape android:shape="rectangle">
                    <gradient
                        android:angle="135"
                        android:startColor="@color/shadow_dark"
                        android:endColor="@color/shadow_light"
                        android:type="linear" />
                    <corners android:radius="24dp" />
                </shape>
            </item>
            <!-- Main button layer -->
            <item android:bottom="2dp" android:right="2dp">
                <shape android:shape="rectangle">
                    <gradient
                        android:angle="135"
                        android:startColor="#FF42A5F5"
                        android:centerColor="#FF1E88E5"
                        android:endColor="#FF1565C0"
                        android:type="linear" />
                    <corners android:radius="24dp" />
                    <stroke
                        android:width="1dp"
                        android:color="@color/highlight" />
                </shape>
            </item>
        </layer-list>
    </item>
    
    <!-- Normal state -->
    <item>
        <layer-list>
            <!-- Shadow layer -->
            <item android:top="4dp" android:left="4dp">
                <shape android:shape="rectangle">
                    <gradient
                        android:angle="135"
                        android:startColor="@color/shadow_dark"
                        android:endColor="@color/shadow_light"
                        android:type="linear" />
                    <corners android:radius="24dp" />
                </shape>
            </item>
            <!-- Main button layer -->
            <item android:bottom="4dp" android:right="4dp">
                <shape android:shape="rectangle">
                    <gradient
                        android:angle="135"
                        android:startColor="#FF64B5F6"
                        android:centerColor="#FF2196F3"
                        android:endColor="#FF1976D2"
                        android:type="linear" />
                    <corners android:radius="24dp" />
                    <stroke
                        android:width="2dp"
                        android:color="@color/highlight" />
                </shape>
            </item>
        </layer-list>
    </item>
    
</selector>
