<?xml version="1.0" encoding="utf-8"?>
<selector xmlns:android="http://schemas.android.com/apk/res/android">
    
    <!-- Pressed State -->
    <item android:state_pressed="true">
        <shape android:shape="rectangle">
            <solid android:color="@color/accent_orange_dark" />
            <corners android:radius="16dp" />
            <stroke android:width="2dp" android:color="@color/accent_orange" />
        </shape>
    </item>
    
    <!-- Focused State -->
    <item android:state_focused="true">
        <shape android:shape="rectangle">
            <solid android:color="@color/accent_orange" />
            <corners android:radius="16dp" />
            <stroke android:width="2dp" android:color="@color/accent_orange_light" />
        </shape>
    </item>
    
    <!-- Normal State -->
    <item>
        <shape android:shape="rectangle">
            <solid android:color="@color/accent_orange" />
            <corners android:radius="16dp" />
            <stroke android:width="1dp" android:color="@color/accent_orange_light" />
        </shape>
    </item>
    
</selector>
