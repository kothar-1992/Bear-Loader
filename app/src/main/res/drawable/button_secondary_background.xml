<?xml version="1.0" encoding="utf-8"?>
<selector xmlns:android="http://schemas.android.com/apk/res/android">
    
    <!-- Pressed state -->
    <item android:state_pressed="true">
        <shape android:shape="rectangle">
            <solid android:color="@color/md3_surface_variant" />
            <corners android:radius="24dp" />
            <stroke android:width="2dp" android:color="@color/md3_on_surface_variant" />
        </shape>
    </item>
    
    <!-- Normal state -->
    <item>
        <shape android:shape="rectangle">
            <solid android:color="@color/md3_surface_container_high" />
            <corners android:radius="24dp" />
            <stroke android:width="1dp" android:color="@color/md3_on_surface_variant" />
        </shape>
    </item>
    
</selector>
