<?xml version="1.0" encoding="utf-8"?>
<selector xmlns:android="http://schemas.android.com/apk/res/android">
    
    <!-- Pressed state -->
    <item android:state_pressed="true">
        <shape android:shape="rectangle">
            <solid android:color="@color/primary_blue_dark" />
            <corners android:radius="16dp" />
            <stroke android:width="1dp" android:color="@color/primary_blue" />
        </shape>
    </item>
    
    <!-- Disabled state -->
    <item android:state_enabled="false">
        <shape android:shape="rectangle">
            <solid android:color="@color/md3_surface_variant" />
            <corners android:radius="16dp" />
            <stroke android:width="1dp" android:color="@color/md3_on_surface_variant" />
        </shape>
    </item>
    
    <!-- Normal state - Blue gradient for download (compact) -->
    <item>
        <shape android:shape="rectangle">
            <gradient
                android:startColor="@color/primary_blue"
                android:endColor="@color/primary_blue_dark"
                android:angle="45" />
            <corners android:radius="16dp" />
            <stroke android:width="1dp" android:color="@color/accent_orange" />
        </shape>
    </item>
    
</selector>
