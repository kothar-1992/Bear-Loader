<?xml version="1.0" encoding="utf-8"?>
<shape xmlns:android="http://schemas.android.com/apk/res/android"
    android:shape="oval">

    <!-- Enhanced golden gradient background with 3D effect -->
    <gradient
        android:startColor="#FFD4AF37"
        android:centerColor="#FFFFD700"
        android:endColor="#FFB8860B"
        android:type="radial"
        android:gradientRadius="120dp" />

    <!-- Enhanced stroke for better definition -->
    <stroke
        android:width="4dp"
        android:color="#FFCD853F" />

</shape>
